{
    "publishers": {
        "MiSTer": {
            "description": "Connect to MiSTer every x seconds and publish events",
            "status": "enabled",
            "type": "schedule"
        },
        "Retroarch": {
            "description": "Get Retroarch game details every x seconds and publish events",
            "status": "disabled",
            "type": "schedule"
        },
        "Steam": {
            "description": "Get Steam game details every x seconds and publish events",
            "status": "disabled",
            "type": "schedule"
        }
    },
    "subscribers": {
        "OBS": {
            "status": "enabled",
            "subscribed_events": [
                {
                    "MisterCoreChange": [
                        {
                            "description": "Change scene on mister core change",
                            "action": "ObsChangeScene",
                            "status": "enabled",
                            "scene": "{core} Scene"
                        },
                        {
                            "description": "clear source text on core change",
                            "action": "ObsChangeSourceText",
                            "status": "enabled",
                            "sources": {
                                "GameName": "",
                                "{core} Game": ""
                            }
                        },
                        {
                            "description": "clear source image on core change",
                            "action": "ObsChangeSourceImage",
                            "status": "enabled",
                            "sources": {
                                "Boxart": "boxart",
                                "Title": "title",
                                "Snap": "snap",
                                "System": "system"
                            }
                        },
                        {
                            "description":"Set the volume for the core",
                            "status":"enabled",
                            "action":"ObsSetSourceVolume",
                            "source":"LiveGamer",
                            "volume":"-12"
                          },
                          {
                            "description":"Set the volume for the core",
                            "status":"enabled",
                            "action":"ObsSetBrowserSourceUrl",
                            "source":"Browser",
                            "url":"https://www.google.com"
                          }
                    ]
                },
                {
                    "MisterGameChange": [
                        {
                            "description": "Change scene to current core in case you are on a different scene (pause?)",
                            "action": "ObsChangeScene",
                            "status": "enabled",
                            "scene": "{core} Scene"
                        },
                        {
                            "description": "Change source text on game change",
                            "action": "ObsChangeSourceText",
                            "status": "enabled",
                            "sources": {
                                "GameName": "{release_name}     [{system}]",
                                "{core} Game": "{release_name}      [{system}]"
                            }
                        },
                        {
                            "description": "Change source image on game change",
                            "action": "ObsChangeSourceImage",
                            "status": "enabled",
                            "sources": {
                                "Boxart": "boxart",
                                "Title": "title",
                                "Snap": "snap",
                                "System": "system"
                            }
                        },
                        {
                            "description": "Change source property to not visible",
                            "action": "ObsSetItemProperty",
                            "status": "disabled",
                            "source": "System",
                            "property": "visible",
                            "value": true
                        }
                    ]
                },
                {
                    "RetroarchGameChange": [
                        {
                            "description": "Change source text on game change",
                            "action": "ObsChangeSourceText",
                            "status": "enabled",
                            "sources": {
                                "GameName": "{release_name}     [{system}]",
                                "{core} Game": "{release_name}      [{system}]"
                            }
                        },
                        {
                            "description": "Change source image on game change",
                            "action": "ObsChangeSourceImage",
                            "status": "enabled",
                            "sources": {
                                "Boxart": "boxart",
                                "Title": "title",
                                "Snap": "snap",
                                "System": "system"
                            }
                        }
                    ]
                }
            ]
        },
        "Script": {
            "status": "disabled",
            "subscribed_events": [
                {
                    "MisterCoreChange": [
                        {
                            "description": "custom script on core change",
                            "status": "disabled",
                            "file": "details.txt",
                            "script": "scripts/write_details_kruizcontrol.py",
                            "format": ""
                        }
                    ]
                },
                {
                    "MisterGameChange": [
                        {
                            "description": "custom script on game change",
                            "status": "disabled",
                            "file": "details.txt",
                            "script": "scripts/write_details_kruizcontrol.py",
                            "format": "KruizControl"
                        }
                    ]
                }
            ]
        },
        "Discord": {
            "status": "disabled",
            "type": "async",
            "subscribed_events": [
                {
                    "MisterGameChange": [
                        {
                            "description": "custom script on game change",
                            "status": "enabled",
                            "state_text": "{release_name}",
                            "details_text": "{system}",
                            "small_text": "",
                            "small_image": "misterkun",
                            "large_text": "",
                            "large_image": "{core}",
                            "buttons": [
                                {
                                    "label": "Button 1",
                                    "url": "https://www.google.com"
                                },
                                {
                                    "label": "Button 2",
                                    "url": "https://www.google.com"
                                }
                            ]
                        }
                    ]
                },
                {
                    "MisterCoreChange": [
                        {
                            "description": "custom script on game change",
                            "status": "enabled",
                            "state_text": "",
                            "details_text": "{system}",
                            "small_text": "",
                            "small_image": "misterkun",
                            "large_text": "",
                            "large_image": "{core}"
                        }
                    ]
                }
            ]
        },
        "Dashboard": {
            "status": "disabled",
            "subscribed_events": [
                {
                    "MisterGameChange": [
                        {
                            "description": "Refresh Dashboard",
                            "action": "DashboardRefresh",
                            "status": "enabled"
                        }
                    ]
                },
                {
                    "MisterCoreChange": [
                        {
                            "description": "Refresh Dashboard",
                            "action": "DashboardRefresh",
                            "status": "enabled"
                        }
                    ]
                }
            ]
        }
    }
}