{
    "publishers": {
        "MiSTer": {
            "description": "Connect to MiSTer every x seconds and publish events",
            "status": "enabled",
            "type": "schedule"
        }
    },
    "subscribers": {
        "OBS": {
            "status": "enabled",
            "subscribed_events": [
                {
                    "MisterCoreChange": [
                        {
                            "description": "Change scene on mister core change",
                            "action": "ObsChangeScene",
                            "status": "enabled",
                            "scene": "{core} Scene"
                        },
                        {
                            "description": "clear source text on core change",
                            "action": "ObsChangeSourceText",
                            "status": "enabled",
                            "sources": {
                                "GameName": "",
                                "{core} Game": ""
                            }
                        },
                        {
                            "description": "clear source image on core change",
                            "action": "ObsChangeSourceImage",
                            "status": "enabled",
                            "sources": {
                                "Boxart": "boxart",
                                "Title": "title",
                                "Snap": "snap",
                                "System": "system"
                            }
                        }
                    ]
                },
                {
                    "MisterGameChange": [
                        {
                            "description": "Change scene to current core in case you are on a different scene (pause?)",
                            "action": "ObsChangeScene",
                            "status": "enabled",
                            "scene": "{core} Scene"
                        },
                        {
                            "description": "Change source text on game change",
                            "action": "ObsChangeSourceText",
                            "status": "enabled",
                            "sources": {
                                "GameName": "{release_name}     [{system}]",
                                "{core} Game": "{release_name}      [{system}]"
                            }
                        },
                        {
                            "description": "Change source image on game change",
                            "action": "ObsChangeSourceImage",
                            "status": "enabled",
                            "sources": {
                                "Boxart": "boxart",
                                "Title": "title",
                                "Snap": "snap",
                                "System": "system"
                            }
                        },
                        {
                            "description": "Change source property to not visible",
                            "action": "ObsSetItemProperty",
                            "status": "disabled",
                            "source": "System",
                            "property": "visible",
                            "value": true
                        }
                    ]
                },
                {
                    "RetroarchGameChange": [
                        {
                            "description": "Change source text on game change",
                            "action": "ObsChangeSourceText",
                            "status": "enabled",
                            "sources": {
                                "GameName": "{release_name}     [{system}]",
                                "{core} Game": "{release_name}      [{system}]"
                            }
                        },
                        {
                            "description": "Change source image on game change",
                            "action": "ObsChangeSourceImage",
                            "status": "enabled",
                            "sources": {
                                "Boxart": "boxart",
                                "Title": "title",
                                "Snap": "snap",
                                "System": "system"
                            }
                        }
                    ]
                }
            ]
        },
        "Dashboard": {
            "status": "disabled",
            "subscribed_events": [
                {
                    "MisterGameChange": [
                        {
                            "description": "Refresh Dashboard",
                            "action": "DashboardRefresh",
                            "status": "enabled"
                        }
                    ]
                },
                {
                    "MisterCoreChange": [
                        {
                            "description": "Refresh Dashboard",
                            "action": "DashboardRefresh",
                            "status": "enabled"
                        }
                    ]
                }
            ]
        }
    }
}